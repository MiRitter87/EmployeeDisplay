<mvc:View
	controllerName="EmployeeDisplay.App"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<App id="app">
		<Page title="Anzeige von Mitarbeiterdaten">
			<Label text="Personalnummer"/>
			<Input id="queryEmployeeId" maxLength="4"/>
			<Button icon="sap-icon://sap-ui5" text="Daten laden" press=".onPress" type="Emphasized"	class="sapUiSmallMargin"/>
			
			<f:Form id="employeeForm" editable="false">
				<f:title>
					<core:Title text="Daten des Mitabeiters" />
				</f:title>
				
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="4"
						emptySpanM="4"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
				
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="Personalnummer">
								<f:fields>
									<Text id="employeeId" text="{SupplierName}" />
								</f:fields>
							</f:FormElement>

							<f:FormElement label="Vorname">
								<f:fields>
									<Text id="firstName" text="{SupplierName}" />
								</f:fields>
							</f:FormElement>
							
							<f:FormElement label="Nachname">
								<f:fields>
									<Text id="lastName" text="{SupplierName}" />
								</f:fields>
							</f:FormElement>
							
							<f:FormElement label="Geschlecht">
								<f:fields>
									<Text id="gender" text="{SupplierName}" />
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</Page>
	</App>
</mvc:View>